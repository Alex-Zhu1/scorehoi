{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "/home/haiming/miniconda3/envs/shoi/bin/python", // 替换为你的 Python 解释器路径
        },
        {
            "name": "Python: Single Image Mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/infer_2.py",
            "console": "integratedTerminal",
            "args": [
                "--input_image",
                "./examples/325_cropped_hoi_1.png", // 替换为你的图像路径
                "--input_image2",
                "./examples/325_cropped_hoi_1_h.png", // 替换为你的图像路径
                "--output-format",
                "ply",
                // "--enable_tex",
                "--device",
                "cuda", // 根据你的硬件改为 "cpu" 或 "mps" 如果需要
                "--steps",
                "20",
                "--guidance_scale",
                "5.5",
                "--octree_resolution",
                "256",
                "--check_box_rembg"
            ],
            "python": "/home/haiming/miniconda3/envs/shoi/bin/python", // 替换为你的 Python 解释器路径
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false // 允许调试第三方库（如 hy3dgen）
        },
        {
            "name": "Python: Multi-View Mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/infer_grok.py",
            "console": "integratedTerminal",
            "args": [
                "--mv_image_front",
                "/path/to/front.png", // 替换为你的前视图图像路径
                "--mv_image_back",
                "/path/to/back.png", // 替换为你的后视图图像路径
                "--mv_image_left",
                "/path/to/left.png", // 替换为你的左视图图像路径
                "--mv_image_right",
                "/path/to/right.png", // 替换为你的右视图图像路径
                "--model_path",
                "tencent/Hunyuan3D-2mini-mv",
                "--output-format",
                "ply",
                // "--enable_tex",
                "--device",
                "cuda",
                "--check_box_rembg"
            ],
            "python": "${workspaceFolder}/.venv/bin/python", // 替换为你的 Python 解释器路径
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "Python: Text-to-3D Mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/infer_grok.py",
            "console": "integratedTerminal",
            "args": [
                "--caption",
                "a futuristic robot",
                "--enable_t23d",
                "--output-format",
                "ply",
                // "--enable_tex",
                "--device",
                "cuda",
                "--check_box_rembg"
            ],
            "python": "${workspaceFolder}/.venv/bin/python", // 替换为你的 Python 解释器路径
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        }
    ]
}